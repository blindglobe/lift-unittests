(in-package :common-lisp-user)

;;; ---------------------------------------------------------------------------
;;; LIsp Framework for Testing (LIFT)
;;; ---------------------------------------------------------------------------

(glu-define-logical-pathname-translations (lift)
  (source))

;;; ---------------------------------------------------------------------------

(define-glu-system :basic-lift
  (("lift")
   (("notes"
     "test-lift"
     "lift-examples"
     "lift-notes"
     "lift.asd") 
    :associates? t))
  
  :base-dir "lift:source;"
  :bin-identifiers (:platform :vendor)
  :depends-on (moptilities))

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :lift-prototypes
  (("prototypes"))
  :system :basic-lift)

;;; ---------------------------------------------------------------------------

(define-glu-system :lift
  nil
  :base-dir "lift:source;"
  :bin-identifiers (:platform :vendor)
  :depends-on (:basic-lift :lift-prototypes)
  :nice-name "LIFT")

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :randomized-testing 
  ("lift-randomized")
  :system lift
  :depends-on (:glu-utilities-minimal :variates))

;;; ---------------------------------------------------------------------------

#+DIGITOOL
(define-glu-module :lift-interface
  ("lift-interface")
  :system lift
  :depends-on (:advise))

